<Window x:Class="virtual_camera.MainWindow"
        Name="Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="virtual-camera"
        Height="800" Width="1200"
        ResizeMode="CanResize"
        Background="Black">
    <Grid>
        <Canvas x:Name="Canvas"
                Height="0" Width="0">
        </Canvas>
        <StackPanel x:Name="StatusPanel">
            <TextBlock x:Name="CoordBox" Foreground="LightGray" Text="X:0 Y:0 Z:0"></TextBlock>
            <TextBlock x:Name="RotationBox" Foreground="LightGray" Text="Rotation: X0°, Y0°, Z0°"></TextBlock>
            <TextBlock x:Name="ZoomBox" Foreground="LightGray" Text="Zoom: 0%"></TextBlock>
        </StackPanel>

    </Grid>
</Window>